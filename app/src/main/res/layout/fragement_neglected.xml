<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">

    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/neglected_title_label" />

    <EditText
        android:id="@+id/neglected_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/neglected_title_hint" />

    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/neglected_details_label" />

    <Button
        android:id="@+id/neglected_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/neglected_solved"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/neglected_solved_label" />

</LinearLayout>